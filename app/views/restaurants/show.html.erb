<h1>Show</h1>
<h2>Here is the restaurant you selected</h2>
<ul>
  <li><%= @restaurant.name %></li>
  <li><%= @restaurant.category %></li>
  <li><%= @restaurant.address %></li>
</ul>
<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <li><%= review.rating %></li>
  <% end %>
</ul>

<div><%= link_to 'Create new review', new_restaurant_review_path(@restaurant), class: "btn btn-success m-3" %></div>

<div><%= link_to 'Please take me back', restaurants_path, class: "btn btn-danger m-3" %></div>
